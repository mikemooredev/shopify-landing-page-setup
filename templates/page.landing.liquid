{% comment %} Including the section inside a capture doesn't make the section available in the customiser so we need to render it out too {% endcomment %}
{%- capture landing_setup -%}
  {%- section 'landing-setup' -%}
{%- endcapture -%}

{% comment %} This is only rendered in the customiser to allow the user to set up which section will be used for which page {% endcomment %}
{%- if request.design_mode -%}
  {{ landing_setup }}
{%- endif -%}

{%- if landing_setup contains "--landing-index:1-" -%}
  {%- section 'landing-1' -%}
{%- endif -%}

{%- if landing_setup contains "--landing-index:2-" -%}
  {%- section 'landing-2' -%}
{%- endif -%}

{%- if landing_setup contains "--landing-index:3-" -%}
  {%- section 'landing-3' -%}
{%- endif -%}
